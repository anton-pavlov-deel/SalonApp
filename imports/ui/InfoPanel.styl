.info-panel
  padding 10px

  & table
    font-size 10px
    border 1px solid #999
    padding 5px
    border-spacing 20px 5px

  & th
    padding 0px 10px 0px 10px
    text-align left
    border-bottom 1px solid #999
    transition 0.5s

  & td
    padding 0px 10px 0px 10px
    text-align right
    border 1px solid #999
    transition 0.5s

  & tr
    background white
    box-shadow none
    transition 0.5s

    & :hover
      padding
      cursor pointer
      transition 0.5s
      box-shadow inset 0 -2px 0px 0px rgba(0,0,0,0.1)
