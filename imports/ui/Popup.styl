.popup
  z-index 5
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  right 0
  bottom 0
  margin auto
  background-color #00000088
  transition 0.5s

.popup-inner
  position absolute
  top 30%
  left 35%
  right 35%
  bottom 35%
  margin auto
  border-radius 25px
  background-color #ffffff11
  transition 0.5s

.popup-header
  text-transform uppercase
  font-family sans-serif
  font-size 12px
  color white
  letter-spacing 1px
  margin 0
  border-radius 25px
  padding 5px 0px 5px 10px
  background-color #2ee59d

  .close-button
    top 20px
    right 15px

.popup-content
  position absolute
  display inline-block
  top 70px
  left 5px
  right 5px
  bottom 5px
