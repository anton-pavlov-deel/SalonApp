drop-config()
  width: 549px


.dropmenu
  width 100%
  display flex
  position relative
  flex-direction column

.dropmenu-header
  flex 1 1 auto
  border-bottom 1px solid #666
  margin 10px 10px 0px 10px
  background white
  transition 0.3s
  & .arrow-wrapper
    float right

  &:hover
    cursor pointer
    color white
    background #2ee59d
    transition 0.3s

.dropmenu-body
  padding 0px 0px 0px 0px
  position relative
  width 100%
  transition 0.3s
  &:focus
    display block
    transition 0.3s
  & ul
    position absolute
    left 0px
    right 0px
    padding 0px
    margin 0px 10px 10px 10px
    list-style none
    box-shadow 0 8px 15px rgba(0,0,0,0.1)
  & li
    text-align center
    background white
    transition 0.3s
    border-bottom 1px solid #666
    border-left 1px solid #666
    border-right 1px solid #666
    padding 0px 5px
    &:hover
      cursor pointer
      background #eee
      transition 0.3s
